<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/include_lostfound_add_top_bar" />

    <EditText
        android:id="@+id/edit_title"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:hint="Title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_edit_height"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:background="@drawable/input"
        />

    <EditText 
        android:id="@+id/edit_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_edit_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:layout_margin="10dp"
        android:inputType="phone"
        android:maxLength="11"
        android:hint="Phone"
        android:background="@drawable/input"
        />

    <EditText 
        android:id="@+id/edit_describe"
        android:hint="Description"
        android:background="@drawable/input"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:lineSpacingExtra="3dp"
        android:gravity="top"
        android:minLines="4"
        />
</LinearLayout><!-- From: file:/F:/Code/Android/AndroidProject/Big%20Project/app/src/main/res/layout/activity_add.xml -->